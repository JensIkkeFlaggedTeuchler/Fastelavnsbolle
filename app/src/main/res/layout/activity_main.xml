<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bedstemorbolle"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView_forsideLogo"
        android:layout_width="404dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="78dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_forsideTekst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fblogo" />

    <TextView
        android:id="@+id/textView_forsideTekst"
        android:layout_width="337dp"
        android:layout_height="158dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="59dp"
        android:text="Den eneste app til en rigtig fastelavnsbolle- connoisseur!"
        android:textColor="#9C27B0"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_opretBruger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_forsideLogo" />

    <Button
        android:id="@+id/button_opretBruger"
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="33dp"
        android:text="Opret bruger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_logInd"
        app:layout_constraintTop_toBottomOf="@+id/textView_forsideTekst" />

    <Button
        android:id="@+id/button_logInd"
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="73dp"
        android:text="Log ind"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_opretBruger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_forsideTekst" />

</androidx.constraintlayout.widget.ConstraintLayout>